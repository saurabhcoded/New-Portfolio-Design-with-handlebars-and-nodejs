<section class="wpo-blog-section section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="wpo-section-title">
          <h2>Certificates</h2>
        </div>
      </div>
    </div>
    <div class="wpo-blog-wrap wpo-blog-slide owl-carousel">
      {{#each certificate}}
        <div class="wpo-blog-item">
          <div class="wpo-blog-img">
            <img
              src="{{this.image}}"
              alt=""
              class="w-100"
              style="height: 250px;object-fit:contain;"
            />
          </div>
          <div class="wpo-blog-text">
            <ul>
              <li>{{this.date}}</li>
            </ul>
            <h2>{{this.title}}</h2>
            <h5>({{this.authority}})</h5>
            <h6 class="details">{{this.code}}</h6>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
  <div class="shadow-shape">
    <svg width="1319" height="1567" viewBox="0 0 1319 1567" fill="none">
      <g filter="url(#filter0_f_39_3832)">
        <circle
          cx="803"
          cy="803"
          r="303"
          fill="#59C378"
          fill-opacity="0.5"
        ></circle>
      </g>
      <defs>
        <filter
          id="filter0_f_39_3832"
          x="0"
          y="0"
          width="1606"
          height="1606"
          filterUnits="userSpaceOnUse"
          color-interpolation-filters="sRGB"
        >
          <feFlood flood-opacity="0" result="BackgroundImageFix"></feFlood>
          <feBlend
            mode="normal"
            in="SourceGraphic"
            in2="BackgroundImageFix"
            result="shape"
          ></feBlend>
          <feGaussianBlur
            stdDeviation="250"
            result="effect1_foregroundBlur_39_3832"
          ></feGaussianBlur>
        </filter>
      </defs>
    </svg>
  </div>
</section>